<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RecyclerViewArtworkShow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/artworkImage"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@{artwork.name}"
        android:scaleType="centerCrop"
        android:src="@drawable/artwork_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">


        <TextView
            android:id="@+id/artworkName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artwork Name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/artworkPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$99.99"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
