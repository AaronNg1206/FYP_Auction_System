<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper"
    tools:context=".FragmentBidProduct">

    <ImageView
        android:id="@+id/imageProductBid"
        android:layout_width="412dp"
        android:layout_height="314dp"
        android:src="@drawable/example"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.018" />

    <TextView
        android:id="@+id/show_Product"
        android:layout_width="137dp"
        android:layout_height="39dp"
        android:text="Monalisa"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageProductBid"
        app:layout_constraintVertical_bias="0.042" />

    <TextView
        android:id="@+id/text_Seller_Bid"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:text="Seller:"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageProductBid"
        app:layout_constraintVertical_bias="0.164" />

    <TextView
        android:id="@+id/text_Ending"
        android:layout_width="90dp"
        android:layout_height="22dp"
        android:text="Ending In :"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageProductBid"
        app:layout_constraintVertical_bias="0.271" />

    <TextView
        android:id="@+id/text_Desc"
        android:layout_width="93dp"
        android:layout_height="23dp"
        android:text="Description"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageProductBid"
        app:layout_constraintVertical_bias="0.369" />

    <TextView
        android:id="@+id/show_Desc"
        android:layout_width="363dp"
        android:layout_height="137dp"
        android:text="The Mona Lisa bears a strong resemblance to many Renaissance depictions of the Virgin Mary, who was at that time seen as an ideal for womanhood."
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageProductBid"
        app:layout_constraintVertical_bias="0.639" />

    <TextView
        android:id="@+id/show_EndingTime"
        android:layout_width="90dp"
        android:layout_height="22dp"
        android:text="18 : 23 : 56"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/text_Ending"
        app:layout_constraintTop_toBottomOf="@+id/imageProductBid"
        app:layout_constraintVertical_bias="0.271" />

    <TextView
        android:id="@+id/show_Seller_Bid"
        android:layout_width="139dp"
        android:layout_height="21dp"
        android:text="David Beckham"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.29"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_Product"
        app:layout_constraintVertical_bias="0.029" />

    <Button
        android:id="@+id/button3"
        android:layout_width="365dp"
        android:layout_height="48dp"
        android:text="@string/btn_Place"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.347"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.945" />
</androidx.constraintlayout.widget.ConstraintLayout>