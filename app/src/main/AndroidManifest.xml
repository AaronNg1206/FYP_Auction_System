<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.nghycp.fyp_auction_system">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/firsticon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/firsticon"
        android:supportsRtl="true"
        android:theme="@style/Theme.FYP_Auction_System"
        tools:targetApi="31">
        <activity
            android:name=".UserHomeActivity"
            android:exported="false"
            android:label="@string/title_activity_user_home"
            android:theme="@style/Theme.FYP_Auction_System.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/title_activity_user_home"
            android:theme="@style/Theme.FYP_Auction_System.NoActionBar" />
        <activity
            android:name=".ShowingScreen"
            android:exported="true"
            android:theme="@style/Theme.FYP_Auction_System.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>